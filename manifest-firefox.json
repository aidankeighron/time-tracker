{
  "manifest_version": 3,
  "name": "Supabase Time Tracker",
  "version": "1.2",
  "description": "Tracks website usage and syncs to Supabase.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "supabase-time-tracker@antigravity",
      "data_collection_permissions": {
          "required": ["browsingActivity"]
      }
    }
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  }
}
